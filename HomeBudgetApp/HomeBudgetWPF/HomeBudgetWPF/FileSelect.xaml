<Window x:Class="HomeBudgetWPF.FileSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="FileSelect" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label x:Name="Category_Page_Title" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="30" Content="New User"/>

        <Grid>


            <StackPanel>
               
                <Button Content="Create New File" 
                        Click="Save_To_Click" 
                        Height="30" Width="100" 
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                />

                <Button 
                    Content="Open Existing File" Click="Open_Current_Database_Click" 
                    Grid.Row="1" Grid.Column="0" 
                    Height="30" Width="100" 
                    HorizontalAlignment="Center"
                    Margin="20"/>

            </StackPanel>



        </Grid>
    </StackPanel>
</Window>
