<Window x:Class="HomeBudgetWPF.FileSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="FileSelect" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#3e4444">
    <StackPanel>
        <Label x:Name="FileSelectPageTitle" FontWeight="Bold" Foreground="#82b74b" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="30" Content="New User"/>

        <Grid>
            <StackPanel>
                <TextBlock FontWeight="Bold" Foreground="#82b74b"
                           x:Name="TxtBlEnterFile"
                           Text="Enter filename (without extension):" Margin="0,0,0,5"
                           HorizontalAlignment="Center"
                           />
                <TextBox x:Name="fileNameTextBox" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" HorizontalAlignment="Center" Height="25" Width ="100" Margin="0,0,0,10"/>
                <Button x:Name="BtnSaveTo"
                        Content="Save To" 
                        Click="Save_To_Click" 
                        Padding="10"
                        HorizontalAlignment="Center"
                        FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White"
                />
                <TextBox x:Name="fileLocation" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" HorizontalAlignment="Center" Height="25" Width ="500" Margin="20"/>

                <Button 
                    x:Name="BtnCreate"
                    Content="Create" 
                    Click="CreateFileButton_Click" 
                    Padding="10"
                    HorizontalAlignment="Center"
                    Margin="20"
                    FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White"/>
                <Button 
                    x:Name="BtnOpenCurrent"
                    Content="Open Current File" Click="Open_Current_Database_Click" 
                    Grid.Row="1" Grid.Column="0" 
                    Padding="10"
                    HorizontalAlignment="Center"
                    Margin="20"
                    FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White"/>

            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
