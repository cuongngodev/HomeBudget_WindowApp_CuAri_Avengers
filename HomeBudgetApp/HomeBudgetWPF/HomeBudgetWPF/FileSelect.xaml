<Window x:Class="HomeBudgetWPF.FileSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="FileSelect" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#3e4444">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="StkFileSelectView">
        <Label x:Name="LblFileSelectPageTitle" 
               FontWeight="Bold" FontSize="30" 
               Foreground="#82b74b" Grid.Row="0" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Padding="10" Content="New User"/>

        <Grid>
            <StackPanel Margin="10">
                <Button x:Name="BtnCreateFile"
                        Content="Create New File" 
                        Click="Save_To_Click" 
                        Padding="10"
                        HorizontalAlignment="Center"
                        FontWeight="Bold" 
                        Background="#405d27" Foreground="#82b74b" 
                        BorderThickness="2" BorderBrush="White"
                />

                <Button x:Name="BtnOpenFile"
                        Content="Open Existing File" Click="Open_Current_Database_Click" 
                        Grid.Row="1" Grid.Column="0" 
                        Padding="10" Margin="20"
                        HorizontalAlignment="Center"
                        FontWeight="Bold" 
                        Background="#405d27" Foreground="#82b74b" 
                        BorderThickness="2" BorderBrush="White"
                />
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
