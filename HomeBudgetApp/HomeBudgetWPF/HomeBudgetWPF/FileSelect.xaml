<Window x:Class="HomeBudgetWPF.FileSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="FileSelect" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="Category_Page_Title" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="30">File Selection</Label>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="FilePath_TxtBox" Margin="5" Grid.Row="0" HorizontalAlignment="Center" MinWidth="200" Grid.ColumnSpan="2" IsReadOnly="True"></TextBox>

            <DockPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                <Button Margin="5" Click="SelectFile">Select File</Button>
                <Button Margin="5" Click="OpenDatabase">Open Database</Button>
            </DockPanel>
        </Grid>
    </StackPanel>
</Window>
