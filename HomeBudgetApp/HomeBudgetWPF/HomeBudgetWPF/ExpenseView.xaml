<Window x:Class="HomeBudgetWPF.ExpenseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="ExpenseView" Height="450" Width="800"
        Background="#3e4444">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="ExpensePageTitle" 
               FontWeight="Bold"
               Foreground="#82b74b" 
               Grid.Row="0" 
               Grid.Column="0"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize="30">Expense Management</Label>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="10">
            <Label x:Name="LogExpenseTitle" FontWeight="Bold" Foreground="#82b74b" 
                   Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Padding="10" FontSize="25">Log Expense</Label>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <DockPanel Margin="7" Grid.Row="0" HorizontalAlignment="Center" MinWidth="200">
                    <Label x:Name="LblExpenseDesc" FontWeight="Bold" Foreground="#82b74b" Content="Description:"/>
                    <TextBox x:Name="TxtDesc" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" Width="100"></TextBox>
                </DockPanel>

                <DockPanel Margin="7" Grid.Row="1" HorizontalAlignment="Center" MinWidth="200">
                    <Label x:Name="LblExpenseAmount" FontWeight="Bold" Foreground="#82b74b" Content="Amount:"/>
                    <TextBox x:Name="TxtAmount" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White"></TextBox>
                </DockPanel>

                <DockPanel Margin="7" Grid.Row="2" HorizontalAlignment="Center" MinWidth="200">
                    <Label x:Name="LblExpenseCat" FontWeight="Bold" Foreground="#82b74b" Content="Category:"/>
                    <ComboBox x:Name="CmbCategory" Foreground="#82b74b" BorderThickness="2" BorderBrush="#405d27" IsEditable="True" StaysOpenOnEdit="True"/>
                </DockPanel>

                <DockPanel Margin="7" Grid.Row="3" HorizontalAlignment="Center" MinWidth="200">
                    <Label x:Name="LblExpenseDate" FontWeight="Bold" Foreground="#82b74b" Content="Date:"/>
                    <DatePicker x:Name="DtDate" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White"/>
                </DockPanel>

                <Button x:Name="BtnLogExpense" 
                FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" 
                Width="auto" Padding="5"
                Grid.Row="5" 
                HorizontalAlignment="Center" 
                Click="ExpenseSubmitClick">Log New Expense</Button>

                <Button x:Name="BtnCancelExpense" Width="auto" Grid.Row="6" Margin="10" Padding="5"
                FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White"
                HorizontalAlignment="Center" Click="Cancel_Expense_Click">Cancel</Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label x:Name="ReadExpenseTitle" FontWeight="Bold" Foreground="#82b74b" 
               Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" 
               Padding="10" FontSize="25">Expenses</Label>

            <DataGrid  Padding="10" 
              Background="#405d27" Foreground="#82b74b" 
              BorderBrush="#82b74b" BorderThickness="5"
              Margin="10"
              IsReadOnly="True"/>
        </StackPanel>
        

    </Grid>
    
</Window>
