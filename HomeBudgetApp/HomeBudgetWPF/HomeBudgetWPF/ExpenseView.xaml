<Window x:Class="HomeBudgetWPF.ExpenseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="ExpenseView" Height="450" Width="800"
        Background="#3e4444">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="10">
            <Label x:Name="LogExpenseTitle" FontWeight="Bold" Foreground="#82b74b" 
                   Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Padding="10" FontSize="25">Display Options</Label>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Filter" Grid.Row="0" FontWeight="Bold"
                          Foreground="#82b74b">
                    <StackPanel>
                        <StackPanel Margin="5">
                            <Label x:Name="LblExpenseStartDate" FontWeight="Bold" Foreground="#82b74b" Content="Start Date"/>
                            <DatePicker x:Name="DtStartDate" Padding="5"
                                        Background="#405d27" Foreground="#82b74b"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <Label x:Name="LblExpenseEndDate" FontWeight="Bold" Foreground="#82b74b" Content="End Date"/>
                            <DatePicker x:Name="DtEndDate" Padding="5"
                                        Background="#405d27" Foreground="#82b74b"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <CheckBox Padding="5" Foreground="#82b74b" VerticalAlignment="Center" VerticalContentAlignment="Center">Filter by Category?</CheckBox>
                            <ComboBox/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Summary" Grid.Row="1" FontWeight="Bold"
                          Foreground="#82b74b">
                    <StackPanel>
                       <StackPanel Margin="5">
                            <CheckBox Padding="5" Foreground="#82b74b" VerticalAlignment="Center" VerticalContentAlignment="Center">By Month</CheckBox>
                            <CheckBox Padding="5" Foreground="#82b74b" VerticalAlignment="Center" VerticalContentAlignment="Center">By Categoory</CheckBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <Button x:Name="BtnLogExpense" 
                FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" 
                Width="auto" Margin="10" Padding="5"
                Grid.Row="5"
                Click="AddExpense">Add Expense</Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <DataGrid  Padding="10" 
              Background="#405d27" Foreground="#82b74b" 
              BorderBrush="#82b74b" BorderThickness="5"
              Margin="10"
              x:Name="ExpensesDataGrid"
              IsReadOnly="True">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Modify" Click="ModifyExpense"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </StackPanel>
        

    </Grid>
    
</Window>
