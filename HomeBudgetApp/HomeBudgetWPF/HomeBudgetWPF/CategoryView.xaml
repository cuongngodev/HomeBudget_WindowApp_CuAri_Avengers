<Window x:Class="HomeBudgetWPF.CategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="CategoryView" Height="450" Width="350"
        Background="#3e4444">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="CategoryPageTitle" Foreground="#82b74b" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="30" FontWeight="Bold">Create Category</Label>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <DockPanel Margin="10" Grid.Row="0" HorizontalAlignment="Center" MinWidth="200">
                <Label x:Name="LblCatDescription" Foreground="#82b74b" Content="Description" FontWeight="Bold"/>
                <TextBox x:Name="TxtDescription" Background="#405d27" Foreground="#82b74b" BorderBrush="White" BorderThickness="2"></TextBox>
            </DockPanel>

            <DockPanel Margin="10"  Grid.Row="1" HorizontalAlignment="Center" MinWidth="200">
                <Label x:Name="LblCatType" Foreground="#82b74b" Content="Type" FontWeight="Bold"/>
                <ComboBox x:Name="CmbCatType" Foreground="#82b74b" BorderThickness="2" BorderBrush="#405d27"/>
            </DockPanel>

            <Button x:Name="BtnCreateCategory" 
                    Margin="10"
                    FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" 
                    Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5"
                    Click="NewCatSubmitClicked">Add</Button>
            
            <Button x:Name="BtnCancelCategory"
                    Width="auto" Margin="10" Grid.Row="3" 
                    FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" Padding="5" BorderBrush="White"
                    HorizontalAlignment="Right" Click="Cancel_Category_Click"  
                    VerticalAlignment="Top">Cancel</Button>
            
        </Grid>
    </StackPanel>
</Window>
