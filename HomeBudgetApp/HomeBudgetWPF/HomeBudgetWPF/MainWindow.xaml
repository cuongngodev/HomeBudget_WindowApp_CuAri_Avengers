<Window x:Class="HomeBudgetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label x:Name="Home_Title" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="30">C. A. A.</Label>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Padding="10" BorderThickness="2" BorderBrush="Black" Click="OpenFileSelection">File Selection</Button>
            <Button Grid.Column="0" Grid.Row="1" Padding="10" BorderThickness="2" BorderBrush="Black" Click="OpenExpenseManagement">Expenses</Button>
            <Button Grid.Column="0" Grid.Row="2" Padding="10" BorderThickness="2" BorderBrush="Black" Click="OpenCategoryManagement">Categories</Button>

            <Border Grid.Column="1" Grid.RowSpan="4" BorderThickness="2" BorderBrush="Black"></Border>
            
        </Grid>
    </Grid>
</Window>
