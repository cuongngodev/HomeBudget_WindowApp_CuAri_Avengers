<Window x:Class="HomeBudgetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#3e4444">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Foreground="#82b74b" x:Name="Home_Title" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="30" FontWeight="Bold">C. A. A.</Label>

        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Filter" Grid.Row="0" FontWeight="Bold"
                  Foreground="#82b74b" Margin="10">
                    <StackPanel>
                        <StackPanel Margin="5">
                            <Label x:Name="LblExpenseStartDate" FontWeight="Bold" Foreground="#82b74b" Content="Start Date"/>
                            <DatePicker x:Name="DtStartDate" Padding="5"
                                Background="#405d27" Foreground="#82b74b"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <Label x:Name="LblExpenseEndDate" FontWeight="Bold" Foreground="#82b74b" Content="End Date"/>
                            <DatePicker x:Name="DtEndDate" Padding="5"
                                Background="#405d27" Foreground="#82b74b"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <CheckBox Padding="5" Foreground="#82b74b" VerticalAlignment="Center" VerticalContentAlignment="Center">Filter by Category?</CheckBox>
                            <ComboBox x:Name="CmbFilterCategory"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Summary" Grid.Row="0" Grid.Column="1" FontWeight="Bold"
                  Foreground="#82b74b" Margin="10" Width="auto">
                    <StackPanel>
                        <StackPanel Margin="5">
                            <CheckBox Padding="5" Foreground="#82b74b" VerticalAlignment="Center" VerticalContentAlignment="Center">By Month</CheckBox>
                            <CheckBox Padding="5" Foreground="#82b74b" VerticalAlignment="Center" VerticalContentAlignment="Center">By Categoory</CheckBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <Button x:Name="BtnLogExpense" 
                        FontWeight="Bold" Background="#405d27" Foreground="#82b74b" BorderThickness="2" BorderBrush="White" 
                        Width="auto" Margin="10" Padding="5"
                        Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150"
                        Click="AddExpense">Add Expense</Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <DataGrid Padding="10" 
                      Background="#405d27" Foreground="#82b74b" 
                      BorderBrush="#82b74b" BorderThickness="5"
                      Margin="10"
                      x:Name="ExpensesDataGrid"
                      IsReadOnly="True">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Modify" Click="ModifyExpense"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </StackPanel>


        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="10">
            <Label Foreground="#82b74b" x:Name="ThemeTitleLbl" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold">Color Themes</Label>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="DefaultThemeBtn" Margin="5" Foreground="#82b74b" Checked="AlertColorChange">Default</RadioButton>
                <RadioButton x:Name="ProDeuterThemeBtn" Margin="5" Foreground="#82b74b" Checked="AlertColorChange">Protanopia / Deuteranopia</RadioButton>
                <RadioButton x:Name="TritanopiaThemeBtn" Margin="5" Foreground="#82b74b" Checked="AlertColorChange">Tritanopia</RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

